{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "192.168.178.59",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "C:/develop/raspberry/complete-robot/move-robot-vehicle/docker/app",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false // Set to true if you only want to debug your code, false for stepping into library code
        }
    ]
}